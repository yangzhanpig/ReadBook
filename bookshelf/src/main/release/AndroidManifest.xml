<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yzp.bookshelf">

    <application
        android:name=".app.ShelfMainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name="com.yzp.bookshelf.ui.activity.ShelfMainActivity" />
        <activity
            android:name=".ui.activity.ShelfReadBookActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.activity.ShelfSearchBookActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.activity.ShelfBookInfoActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.activity.ShelfFontsActivity"
            android:launchMode="singleTask" />
    </application>

</manifest>